{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://example.com/schema/template_spec.v0.json",
  "title": "TemplateSpec v0",
  "type": "object",
  "required": ["tokens", "layouts"],
  "properties": {
    "tokens": {
      "type": "object",
      "description": "Theme tokens (colors, typography, etc.)",
      "properties": {
        "colors": {
          "type": "object",
          "properties": {
            "primary": {"type": "string"},
            "secondary": {"type": "string"},
            "accent": {"type": "string"},
            "background": {"type": "string"},
            "surface": {"type": "string"},
            "text": {"type": "string"}
          },
          "additionalProperties": true
        },
        "typography": {"type": "object", "additionalProperties": true},
        "spacing": {"type": "object", "additionalProperties": true},
        "radii": {"type": "object", "additionalProperties": true},
        "shadows": {"type": "object", "additionalProperties": true}
      },
      "additionalProperties": true
    },
    "constraints": {
      "type": "object",
      "properties": {
        "safeMargin": {"type": "number", "minimum": 0, "exclusiveMaximum": 0.5},
        "minFontSize": {"type": "number", "minimum": 1}
      },
      "additionalProperties": true
    },
    "layouts": {
      "type": "array",
      "minItems": 1,
      "items": {
        "type": "object",
        "required": ["name", "placeholders"],
        "properties": {
          "name": {"type": "string", "minLength": 1},
          "rtlSafe": {"type": "boolean"},
          "placeholders": {
            "type": "array",
            "minItems": 1,
            "items": {
              "type": "object",
              "required": ["id", "geometry"],
              "properties": {
                "id": {"type": "string", "minLength": 1},
                "type": {
                  "type": "string",
                  "enum": ["text", "image", "chart", "shape"],
                  "description": "Placeholder semantic type"
                },
                "geometry": {
                  "type": "object",
                  "required": ["x", "y", "w", "h"],
                  "properties": {
                    "x": {"type": "number", "minimum": 0, "maximum": 1},
                    "y": {"type": "number", "minimum": 0, "maximum": 1},
                    "w": {"type": "number", "exclusiveMinimum": 0, "maximum": 1},
                    "h": {"type": "number", "exclusiveMinimum": 0, "maximum": 1}
                  },
                  "additionalProperties": true
                },
                "style": {"type": "object", "additionalProperties": true}
              },
              "additionalProperties": true
            }
          }
        },
        "additionalProperties": true
      }
    }
  },
  "additionalProperties": true
}
